{
    "$id": "editCoupon",
    "type": "object",
    "properties": {
        "couponId": {
            "type": "string",
            "format": "objectid"
        },
        "code": {
            "type": "string",
            "isNotEmpty": true,
            "minLength": 3,
            "maxLength": 20
        },
        "name": {
            "type": "string",   
            "maxLength": 100
        },
        "nameForStore": {
            "type": "string",
            "maxLength": 100
        },
        "subNameForStore": {
            "type": "string",
            "maxLength": 100
        },
        "storeTagName": {
            "type": "string",
            "maxLength": 100
        },
        "nameForCheckout": {    
            "type": "string",
            "maxLength": 100
        },
        "nameForPartner": {
            "type": "string",
            "maxLength": 100
        },
        "nameForShoofir": {
            "type": "string",
            "maxLength": 100
        },
        "type": {
            "type": "string",
            "enum": [
                "percentage",
                "fixed_amount",
                "free_delivery"
            ]
        },
        "discountType": {
            "type": "string",
            "enum": [
                "order_items",
                "delivery"
            ],
            "default": "order_items"
        },
        "value": {
            "type": "number",
            "minimum": 0
        },
        "shoofiDiscount": {
            "type": ["number", "null"],
            "minimum": 0
        },
        "storeDiscount": {
            "type": ["number", "null"],
            "minimum": 0
        },
        "maxDiscount": {
            "type": ["number", "null"],
            "minimum": 0
        },
        "minOrderAmount": {
            "type": ["number", "null"],
            "minimum": 0
        },
        "usageLimit": {
            "type": "number",
            "minimum": 0
        },
        "usagePerUser": {
            "type": "number",
            "minimum": 0
        },
        "start": {
            "type": "object",
            "format": "datetime"
        },
        "end": {
            "type": "object",
            "format": "datetime"
        },
        "applicableTo": {
            "type": "object",
            "properties": {
                "categories": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "products": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "stores": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "supportedAreas": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "isActive": {
            "type": "boolean"
        },
        "isCustomerSpecific": {
            "type": "boolean"
        },
        "customerId": {
            "type": "string",
            "format": "objectid"
        },
        "isAutoApply": {
            "type": "boolean"
        },
        "color": {
            "type": "string",
            "enum": ["white", "black"]
        }
    
    },
    "required": [
        "couponId",
        "code",
        "name",
        "type",
        "value",
        "usageLimit",
        "usagePerUser",
        "start",
        "end"
    ],
    "errorMessage": {
        "properties": {
            "couponId": "Coupon ID must be a valid ObjectId",
            "code": "Coupon code must be between 3 and 20 characters",
            "name": "Coupon name is required and must be between 1 and 100 characters",
            "type": "Invalid coupon type",
            "value": "Value must be a positive number",
            "maxDiscount": "Maximum discount must be a positive number",
            "minOrderAmount": "Minimum order amount must be a positive number",
            "usageLimit": "Usage limit must be a positive number",
            "usagePerUser": "Usage per user must be a positive number",
            "customerId": "Customer ID must be a valid ObjectId"
        }
    }
} 